#compdef ukigumo-server

_arguments -n : \
  '(--host -h)'{-h,--host}'[Bind host(Default: 0)]' \
  '(--port -p)'{-p,--port}'[Bind port(Default: 2828)]' \
  '(--max-workers)--max-workers=[Max workers(Default: 4)]' \
  '(--config -c)'{-c,--config}'[Configuration file]: :_files'\
  '*: :()'

